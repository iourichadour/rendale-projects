<h1>New album</h1>

<%= error_messages_for :album %>

<% form_for(:album, :url => albums_path) do |f| %>
  <p>
	<label for="album_title">Title</label><br/>
	<%= f.text_field :title %>
  </p>
  <p>
	<label for="album_description">Description:</label><br/>
	<%= f.text_area :description %>
  </p>
  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', albums_path %>