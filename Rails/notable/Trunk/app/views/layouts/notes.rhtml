<html>
<head>
  <title>Notable</title>
  <%= javascript_include_tag :defaults %> 
  <%= javascript_include_tag 'notable.js'%>
  <%= stylesheet_link_tag 'notable' %>
</head>
<body>

<div class="header">
	<h1 class="logo">
		<div style="padding-left:25px;">Notable!</div>
	</h1>				
</div>
<div class="navigation">
<ul>
	  <li><%= link_to 'home', {:controller => 'notes', :action=>'home'}, :class=>'active' %></li>
	  <li><%= link_to 'files', {:controller => 'notes', :action=> 'files'}, :class=>'inactive'  %></li>
	  <li><%= link_to 'account', {:controller=> 'account', :action=>'account'}, :class=>'inactive' %></li>
	  <li><%= link_to 'logout', {:controller=> 'account', :action=>'logout'}, :class=>'link' %></li>
  </ul>		
</div>

<iframe id="upload_target" name="upload_target" style="width:0;height:0" frameborder="0"></iframe>

<div id="content_wrapper">
	<div class="top-bar">
		<div class="search_form">
		<%= start_form_tag ({:action => 'search_by_tag'} )%>
			<%= text_field_tag 'tag_search', "search for tags..." %> <%= submit_tag "Search", :class=>"button"%>
			<%= link_to_remote 'new note', 
			:url=>{:controller=>'notes',:action=>'new'}		                       		     
			%>
		<%= end_form_tag %>
		</div>
	</div>
<%= @content_for_layout %>
</div>
</body>
</html>
